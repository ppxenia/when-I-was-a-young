<script>
var c=document.getElementById("shape");
var ctx=c.getContext("2d");
ctx.beginPath();
ctx.strokeStyle="green";
ctx.moveTo(250,50);
ctx.lineTo(200,200);
ctx.lineTo(300,300);
ctx.lineTo(250,50);
ctx.stroke();
ctx.closePath();
</script>
